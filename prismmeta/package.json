{
  "name": "prismmeta",
  "displayName": "PrismMeta MCP Server",
  "description": "Connect to PrismMeta's production MCP server with trust layer, security, and AI-powered development tools using the Model Context Protocol.",
  "version": "1.0.0",
  "publisher": "RonaldKigenKomen",
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Data Science"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "cline",
    "database",
    "trust-layer",
    "prismmeta"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prismmeta/mcp-vscode"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "PrismMeta MCP",
      "properties": {
        "prismmeta.mcpHeadUrl": {
          "type": "string",
          "default": "https://prismmeta-mcp-head-xnnblyviqq-uc.a.run.app/mcp/jsonrpc",
          "description": "URL of the PrismMeta MCP head service"
        },
        "prismmeta.autoConfigureCline": {
          "type": "boolean",
          "default": true,
          "description": "Automatically configure PrismMeta MCP in Cline"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^9.39.1"
  }
}
